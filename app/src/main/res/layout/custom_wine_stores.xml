<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutStores"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_five_dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewSores"
        style="@style/CardViewStyle">

        <RelativeLayout
            android:id="@+id/relativeLayoutStores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/tap_for_map"
                android:layout_marginTop="@dimen/margin_five_dp"
                android:layout_marginRight="@dimen/margin_five_dp"
                android:layout_marginEnd="@dimen/margin_five_dp"
                app:srcCompat="@drawable/ic_menu_camera"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/textViewStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginTop="@dimen/margin_five_dp"
                android:layout_marginRight="@dimen/margin_five_dp"
                android:layout_marginEnd="@dimen/margin_five_dp"
                android:layout_toRightOf="@+id/imageViewStore"
                android:layout_toEndOf="@+id/imageViewStore"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/textViewVicinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_five_dp"
                android:layout_marginRight="@dimen/margin_five_dp"
                android:layout_marginEnd="@dimen/margin_five_dp"
                android:layout_below="@+id/textViewStoreName"
                android:layout_toRightOf="@+id/imageViewStore"
                android:layout_toEndOf="@+id/imageViewStore"/>

            <TextView
                android:id="@+id/textViewHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_five_dp"
                android:layout_below="@+id/textViewVicinity"
                android:layout_toRightOf="@+id/imageViewStore"
                android:layout_toEndOf="@+id/imageViewStore"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>